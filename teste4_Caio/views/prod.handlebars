{{!-- Consulta ao banco de dados (CRUD) --}}
<h1>Clientes cadastrados</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">NOME</th>
      <th scope="col">CPF</th>
      <th scope="col">TELEFONE</th>
      <th scope="col">Visualizar</th>
      <th scope="col">Editar</th>
      <th scope="col">Excluir</th>
      </tr>
  </thead>
  {{#each listar}}
  <tbody>
    <tr>
      <th scope="row">{{this.id}}</th>
      <td><a href="/prod/{{this.id}}">{{nome}}</a></td>
      <td>{{cpf}} </td>
      <td>{{telefone}} </td>
      <td><a href="/prod/{{this.id}}"><button type="button" class="btn btn-success">Ver</button></a></td>
       <td><a href="/prod/edit/{{this.id}}"><button type="button" class="btn btn-primary">Editar</button></a></td>
      <td><a href="/prod/remove/{{this.id}}" ><button type="button" class="btn btn-danger">Excluir</button></a></td>
      <!--<td><button type="button" class="btn btn-success"><a href="/prod/{{this.id}}">Ver</a></button></td> -->
    </tr>
  
  </tbody>
   {{/each}}
</table>










